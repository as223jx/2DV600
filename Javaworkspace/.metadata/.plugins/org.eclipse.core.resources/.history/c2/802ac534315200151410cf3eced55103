package exercise2;

import java.util.Scanner;

public class LargestK {
	
	public static void main(String[] args) {
		while(true){
		Scanner scan = new Scanner(System.in);
		System.out.print("\nType an integer: ");
		int n = scan.nextInt();
		
		boolean b = true;
		int count = 0;
		int k = 0;
		

		for (int i = 0; i < n; i+=count) {
			
			if (i + count+2 <= n){
				count += 2;
			}
			else{
				break;
			}

		}
		k = count;


		
		System.out.println("LargestK: " + k);
		}
		
	}
	
}